GridLayout:
    rows: 4    
    cols: 4
    padding: 5
    spacing: 5

    Label:
        id: label
        text: ""
        font_size: 30
        halign: 'right'
        valign: 'middle'

    CustomButton:
        text: "7"
        on_press: label.text+=self.text
    CustomButton:
        text: "8"
        on_press: label.text+=self.text
    CustomButton:
        text: "9"
        on_press: label.text+=self.text
    CustomButton:
        text: "+"
        on_press: label.text+=self.text
    CustomButton:
        text: "4"
        on_press: label.text+=self.text
    CustomButton:
        text: "5"
        on_press: label.text+=self.text
    CustomButton:
        text: "6"
        on_press: label.text+=self.text
    CustomButton:
        text: "-"
        on_press: label.text+=self.text
    CustomButton:
        text: "1"
        on_press: label.text+=self.text
    CustomButton:
        text: "2"
        on_press: label.text+=self.text
    CustomButton:
        text: "3"
        on_press: label.text+=self.text
    CustomButton:
        text: "*" 
        on_press: label.text+=self.text
    CustomButton:
        text: " <- "
        on_press: label.text = ""
    CustomButton:
        text: "0"
        on_press: label.text+=self.text
    CustomButton:
        text: "="
        on_press: label.text = str(eval(label.text))
    CustomButton:
        text: "/"
        on_press: label.text+=self.text

<CustomButton@Button>:
    font_size: 24
        
