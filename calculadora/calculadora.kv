GridLayout:
    rows: 1
    Label:
        id: label
        text: ""
    GridLayout:
        rows: 4    
        cols: 4
        padding: 5
        spacing: 5
        Button:
            text: "1"
            on_press: label.text+=self.text
        Button:
            text: "2"
            on_press: label.text+=self.text
        Button:
            text: "3"
            on_press: label.text+=self.text
        Button:
            text: "4"
            on_press: label.text+=self.text
        Button:
            text: "5"
            on_press: label.text+=self.text
        Button:
            text: "6"
            on_press: label.text+=self.text
        Button:
            text: "7"
            on_press: label.text+=self.text
        Button:
            text: "8"
            on_press: label.text+=self.text
        Button:
            text: "9"
            on_press: label.text+=self.text
        Button:
            text: "+"
            on_press: label.text+=self.text
        Button:
            text: "-"
            on_press: label.text+=self.text
        Button:
            text: "*" 
            on_press: label.text+=self.text
        Button:
            text: "/"
            on_press: label.text+=self.text
        Button:
            text: "Borrar"
            on_press: label.text = ""
        Button:
            text: "="
            on_press: label.text = str(eval(label.text))