ScreenManager:
    Screen:
        name: "Formulario"
        BoxLayout:
            orientation: "vertical"
            canvas:
                Color: 
                    rgb: [0,0.5,0]
            Label:
                text: "Formulario"
                size_hint_y: None
                height: sp(50)
                font_size: sp(30)
            
            GridLayout:
                cols: 2
                spacing: dp(10)
                padding: dp(10)
                TextInput:
                    hint_text:'Nombre'
                    size_hint: (0.5, None)
                    height: dp(40)
                TextInput:
                    hint_text:'Apellido'
                    size_hint: (0.5, None)
                    height: dp(40)
                TextInput:
                    hint_text:'NÃºmero'
                    size_hint: (0.5, None)
                    height: dp(40)
                TextInput:
                    hint_text:'Color Favorito'
                    size_hint: (0.5, None)
                    height: dp(40)
            Button:
                text: "Enviar formulario"
                on_press:
                    root.transition.direction = 'left'
                    root.current = "Pantalla 2"
                size_hint: (0.5,None)
                width: dp(200)
                height: dp(50)
                pos_hint: {'center_x': 0.5}

        ProgressBar:
            size_hint_y: None
            height: dp(20)  
            id: progress_bar
            max: 100
            value: 0
            pos_hint: {'center_x':0.5,'center_y':0.91}
        
    Screen:
        name: "Pantalla 2"
        BoxLayout:
            orientation: "vertical"
            ProgressBar:
                size_hint_y: None
                height: dp(20)
                id: progress_bar
                max: 100
                value: 50
                pos_hint: {'center_x':0.5, 'center_y':0.91}
        
            Button:
                text: "Completar"
                on_press: progress_bar.value=100
                size_hint: (0.5,None)
                height: dp(50)
                width: dp(200)
                pos_hint: {'center_x': 0.5}